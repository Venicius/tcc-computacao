            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_sensor_temperatura"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentTop="true"
                    android:layout_margin="5sp"
                    android:src="@drawable/icon_temperatura"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/valor_sensor_temperatura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_sensor_temperatura"
                        android:text="-----"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/nome_sensor_temperatura"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/valor_sensor_temperatura"

                        android:text="Temperatura"
                        android:textColor="@color/common_google_signin_btn_text_light_focused"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/update_sensor_temperatura"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="--/--/-- --h-- " />

                </LinearLayout>
            </LinearLayout>

